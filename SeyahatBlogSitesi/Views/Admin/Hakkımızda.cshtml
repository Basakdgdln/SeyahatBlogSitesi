@model SeyahatBlogSitesi.Models.Siniflar.Hakkımızda
@{ ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<br />
@using (Html.BeginForm("HakkımızdaGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <img src="@ViewBag.foto" style="height:500px; width:500px" />
            </div>
            <br />

            <div class="col-md-6">
                <label>FACEBOOK ADRESİ</label>
                @Html.TextBoxFor(x => x.Facebook, new { @class = "form-control", @style = "border:groove", @readonly = "readonly" })
                <br />
                <label>İNSTAGRAM ADRESİ</label>
                @Html.TextBoxFor(x => x.İnstagram, new { @class = "form-control", @style = "border:groove", @readonly = "readonly" })
                <br />
                <label>TWİTTER ADRESİ</label>
                @Html.TextBoxFor(x => x.Twitter, new { @class = "form-control", @style = "border:groove", @readonly = "readonly" })
                <br />
                <label>MAİL</label>
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @style = "border:groove", @readonly = "readonly" })
                <br />
                <label>HAKKIMIZDA</label>
                @Html.TextAreaFor(x => x.Hakkimizda, new { @class = "form-control", @style = "border:groove", @readonly = "readonly" })
                <br />
                <label>FOTO URL</label>
                @Html.TextAreaFor(x => x.FotoUrl, new { @class = "form-control", @style = "border:groove", @readonly = "readonly" })
                <br />

                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal1">Güncelleme Yap</button>
                <div class="modal" id="modal1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2>Hakkımızda Güncelleme Sayfası</h2>
                                <button class="btn btn-danger" data-dismiss="modal">x</button>
                            </div>
                           
                            <div class="modal-body">
                                <label>FACEBOOK ADRESİ</label>
                                @Html.TextBoxFor(x => x.Facebook, new { @class = "form-control", @style = "border:groove" })
                                <br />
                                <label>İNSTAGRAM ADRESİ</label>
                                @Html.TextBoxFor(x => x.İnstagram, new { @class = "form-control", @style = "border:groove" })
                                <br />
                                <label>TWİTTER ADRESİ</label>
                                @Html.TextBoxFor(x => x.Twitter, new { @class = "form-control", @style = "border:groove" })
                                <br />
                                <label>MAİL</label>
                                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @style = "border:groove" })
                                <br />
                                <label>HAKKIMIZDA</label>
                                @Html.TextAreaFor(x => x.Hakkimizda, new { @class = "form-control", @style = "border:groove" })
                                <br />
                                <label>Foto url</label>
                                <input type="file" name="FotoUrl" />
                                <br /><br />
                                <button class="btn btn-info">Güncelle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}