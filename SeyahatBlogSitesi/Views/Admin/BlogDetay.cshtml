@model SeyahatBlogSitesi.Models.Siniflar.BlogDetay
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("BlogDetayGuncelle", "Admin", FormMethod.Post))
{
