        <br />
        @Html.LabelFor(x => x.Resim1)
        @Html.TextBoxFor(x => x.Resim1, new { @class = "form-control", @style = "border:groove" })
        @Html.ValidationMessageFor(x => x.Resim1, "", new { @class = "color:red" })
        <br />
        @Html.LabelFor(x => x.Gelisme)
        @Html.TextAreaFor(x => x.Gelisme, new { @class = "form-control", @style = "border:groove" })
        @Html.ValidationMessageFor(x => x.Gelisme, "", new { @class = "color:red" })
        <br />
        @Html.LabelFor(x => x.Resim2)
        @Html.TextBoxFor(x => x.Resim2, new { @class = "form-control", @style = "border:groove" })
        @Html.ValidationMessageFor(x => x.Resim2, "", new { @class = "color:red" })
        <br />
        @Html.LabelFor(x => x.Sonuc)
        @Html.TextAreaFor(x => x.Sonuc, new { @class = "form-control", @style = "border:groove" })
        @Html.ValidationMessageFor(x => x.Sonuc, "", new { @class = "color:red" })
        <br />
        @Html.LabelFor(x => x.Resim3)
        @Html.TextBoxFor(x => x.Resim3, new { @class = "form-control", @style = "border:groove" })
        @Html.ValidationMessageFor(x => x.Resim3, "", new { @class = "color:red" })
        <br />
        @Html.LabelFor(x => x.Detay)
        @Html.TextAreaFor(x => x.Detay, new { @class = "form-control", @style = "border:groove" })
        <br />
        @Html.LabelFor(x => x.Resim4)
        @Html.TextBoxFor(x => x.Resim4, new { @class = "form-control", @style = "border:groove" })
        <br />
        @Html.LabelFor(x => x.Detay1)
        @Html.TextAreaFor(x => x.Detay1, new { @class = "form-control", @style = "border:groove" })
        <br />
        @Html.LabelFor(x => x.Resim5)
        @Html.TextBoxFor(x => x.Resim5, new { @class = "form-control", @style = "border:groove" })
        <br />
        @Html.LabelFor(x => x.Tarih)
        <input  type="text" class="form-control" style="border:groove" name="Tarih" value="@ViewBag.tarih">
        <br />
        @Html.LabelFor(x => x.UlkeResim)
        @Html.TextBoxFor(x => x.UlkeResim, new { @class = "form-control", @style = "border:groove" })
        @Html.ValidationMessageFor(x => x.UlkeResim, "", new { @class = "color:red" })
        <br />


        <button class="btn btn-primary">Güncelle</button>
    </form>
}