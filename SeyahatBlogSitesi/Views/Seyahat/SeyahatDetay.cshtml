@model SeyahatBlogSitesi.Models.Siniflar.Class3
@{
    ViewBag.Title = "SeyahatDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<nav class="site-nav mt-3">
    <div class="container">

        @Html.Action("Partial1", "Blog")

    </div>
</nav>


<div class="hero overlay">
    @foreach (var x in Model.Detay)
    {
        <div class="img-bg rellax">
            <img src="@x.UlkeResim" class="img-fluid" style="width:1700px; height:650px">
        </div>
    }

    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-lg-6 mx-auto text-center">
                <p> <a href="#"></a>  <a href="#"></a></p>
                <h1 class="heading" data-aos="fade-up" style="height:250px"></h1>
                <p data-aos="fade-up"></p>
            </div>
        </div>
    </div>
</div>


    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-8 blog-content pe-5">
                    @foreach (var x in Model.Detay)
                    {
                        <p class="lead">@x.Baslik</p>
                        <p>@x.Giris</p>
                        <img src="@x.Resim1" class="img-fluid" style="height:412px; width:914px">
                        <br /><br />
                        <blockquote><p>@x.Gelisme</p></blockquote>
                        <img src="@x.Resim2" class="img-fluid" style="height:412px; width:914px">
                        <br /><br />
                        <p>@x.Sonuc</p>
                        <img src="@x.Resim3" class="img-fluid" style="height:412px; width:914px"><br /><br />

                        if (x.Detay != null)
                        { <blockquote><p>@x.Detay</p></blockquote>
                        <img src="@x.Resim4" class="img-fluid" style="height:412px; width:914px">
                        <br /><br />
                    }
                    else { }


                    if (x.Detay1 != null)
                    {
                        <p>@x.Detay1</p>
                        <img src="@x.Resim5" class="img-fluid" style="height:412px; width:914px">
                        <br /><br />
                    }
                    else { }
                    <div class="pt-5">
                        <p>Seyehat Rehberi:  <a href="">@x.SeyahatRehberi.Rehber </a>, <a href=""># </a> &nbsp;  Konum: <a href="#">@x.Seyahatler.UlkeAD</a>, <a href="">#</a></p>
                    </div>
                }

                    <div class="pt-5">
                        <h3 class="mb-5">@ViewBag.d2</h3>
                        <ul class="comment-list">
                            @foreach (var x in Model.Yorumlar)
                            {
                                <li class="comment">
                                    <div class="vcard bio">
                                        <img src="~/untree.co-sterial/images/17605.png" />
                                    </div>
                                    <div class="comment-body">
                                        <h3>@x.KullaniciAdi</h3>
                                        <div class="meta">January 9, 2018 at 2:21pm</div>
                                        <p>@x.Yorum</p>
                                        <p><a href="#" class="reply">Reply</a></p>
                                    </div>
                                </li>
                            }
                        </ul>

                        @Html.Action("YorumEkle", "Blog")

                    </div>


                </div>
                <div class="col-md-4 sidebar">
                    <div class="sidebar-box">
                        <form action="#" class="search-form">
                            <div class="form-group">
                                <span class="icon fa fa-search"></span>
                                <input type="text" class="form-control" placeholder="Type a keyword and hit enter">
                            </div>
                        </form>
                    </div>
                    <div class="sidebar-box">
                        <div class="categories">
                            <h3>Seyahat Rehberi </h3>
                            @foreach (var x in Model.Rehber)
                            {
                                <li>
                                    <a href="/Seyahat/Index2/@ViewBag.d1/@x.RehberID">@x.Rehber</a>
                                </li>
                            }
                        </div>

                    </div>

                    @Html.Action("SonrakiBlog2", "Seyahat")
                </div>
        </div>
    </div>
</div>